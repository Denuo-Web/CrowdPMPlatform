{
  "name": "crowdpm-functions",
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "prebuild": "node ../scripts/prepare-functions-deps.mjs",
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "predev": "pnpm run build",
    "dev": "firebase emulators:start --project local",
    "preemulate": "pnpm run build",
    "emulate": "firebase emulators:start --project local",
    "test": "vitest",
    "admin:grant-role": "node ./scripts/grant-role.mjs",
    "backfill:batch-moderation": "node ./scripts/backfill-batch-moderation.mjs"
  },
  "engines": {
    "node": ">=22.0.0 <25.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "fastify": "^5.7.4",
    "fastify-rate-limit": "npm:@fastify/rate-limit@^10.3.0",
    "firebase-admin": "^13.6.1",
    "firebase-functions": "^7.0.5",
    "jose": "^6.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "firebase-tools": "^15.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
