{
  "name": "crowdpm",
  "private": true,
  "workspaces": [
    "functions",
    "frontend",
    "shared-types"
  ],
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": "^24.0.0"
  },
  "scripts": {
    "prepare:functions-deps": "node scripts/prepare-functions-deps.mjs",
    "predev": "pnpm run prepare:functions-deps && pnpm --filter crowdpm-functions build",
    "dev": "concurrently -k -n FRONTEND,FUNCTIONS,FUNCTIONS_BUILD \"pnpm --filter crowdpm-frontend dev\" \"pnpm --filter crowdpm-functions emulate\" \"pnpm --filter crowdpm-functions build:watch\"",
    "device:pair": "node scripts/device-emulator.mjs",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "eslint \"{functions,frontend}/src/**/*.{ts,tsx}\" \"functions/test/**/*.ts\"",
    "deploy": "firebase deploy"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1"
  },
  "pnpm": {
    "overrides": {
      "node-forge": "1.3.2",
      "qs": "6.14.1",
      "jsonwebtoken": "9.0.3",
      "@google-cloud/storage": "7.19.0"
    }
  }
}
