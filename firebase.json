{
  "functions": {
    "source": "functions",
    "runtime": "nodejs22",
    "predeploy": [
      "pnpm run prepare:functions-deps",
      "pnpm --filter crowdpm-functions build"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": { "port": 5001 },
    "firestore": { "port": 8080 },
    "auth": { "port": 9099 },
    "storage": { "port": 9199 },
    "pubsub": { "port": 8085 },
    "ui": { "enabled": true }
  },
  "hosting": {
    "public": "frontend/dist",
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  }
}
